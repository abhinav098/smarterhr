<table align="center">
  <thead>
    <tr>
      <th> From  </th>
      <th> To </th>
      <th> Days </th>
      <th> Status </th>
      <th> Actions</th>
      <th> Mgr_actions </th> 
    </tr>
  </thead>
  <tbody>
    <% @leaves.each do |leave| %>
      <tr>
        <td><%= leave.from %></td>
        <td><%= leave.to %></td>
        <td><%= leave.days %></td>
        <td><%= leave.status %></td>
        <td><%= link_to "Edit", edit_leave_path(leave) %> | 
         <%= link_to "Cancel", leave_path(leave), method: :delete %></td>
        <td><%= link_to "Approve", edit_leave_path(leave) %> | 
         <%= link_to "Reject", edit_leave_path(leave) %></td>
      </tr>
    <% end %>
  </tbody>
</table>