<table align="center">
  <thead>
    <tr>
      <th> Date </th>
      <th>Clock In</th>
      <th>Clock Out</th>
      <th>Duration</th>
      <th>Status </th>
    </tr>
  </thead>
  <tbody>
    <% @attendances.each do |attendance| %>
      <tr>
        <td><%= attendance.day %>
        <td><%= attendance.clock_in %></td>
        <td><%= attendance.clock_out %></td>
        <% if current_attendance == attendance %> 
        <% else %>
          <td><%= attendance.work ? attendance.duration : "N.A." %></td>
          <td><%= attendance.status %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>