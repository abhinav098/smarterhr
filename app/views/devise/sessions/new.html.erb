<%= provide(:title, "Log In") %>
<div class = "panel">
  <h3 align = "center">MindNudge Technologies Pvt Ltd.</h3>
  <p align = "center"> Sign in using your credentials. </p>
  <div class="panel">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.email_field :email, autofocus: true ,placeholder: 'Enter Email' %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "off", placeholder: 'Enter Password' %>
      </div>

      <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>  Remember me
      </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "Log in", class: "button small" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
