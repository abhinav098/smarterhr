<table align="center">
  <thead>
    <tr>
      <th>Employee Name</th>
      <th>Equipment Name</th>
      <th>Manager</th>
      <th>Request date</th>
      <th>Status</th>
      <% if current_user.manager? %>
        <th>Manager actions</th>
      <% else %>
        <th>Actions</th>
      <% end %>
      <th>Response date</th>
    </tr>
  </thead>
  <tbody>
    <% @equipments.each do |equipment| %>
      <tr>
        <td><%= equipment.user.full_name.capitalize %></td>
        <td><%= equipment.name %></td>
        <td><%= equipment.user.managers.first.full_name %></td>
        <td><%= equipment.requested_on %></td>
        <td><%= equipment.state.capitalize %></td>
        <% if (equipment.user != current_user) && current_user.manager? %>
          <td>
            <%= form_for equipment do |f|%>
              <% if equipment.approved? %>
                <%= f.submit "Reject" , class: "button tiny alert round" %>
              <% elsif equipment.rejected? %>
                <%= f.submit "Approve", class: "button tiny success round" %>
              <% else %>
                <%= f.submit "Approve", class: "button tiny success round" %>
                <%= f.submit "Reject" , class: "button tiny alert round" %>
              <% end %>
            <% end %>
          </td>
          <% if !equipment.open? %>
          <td><%= equipment.issued_on %></td>
          <% end %>
        <% else %>
          <td><%= link_to "Edit", edit_equipment_path(equipment) , class: "button tiny round"%>
           <%= link_to "Cancel", equipment_path(equipment), method: :delete, class: "button tiny alert round" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
